<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreTailorFragment">

    <include
        android:id="@+id/toolBarMore2"
        layout="@layout/tool_bar_more_cust" />

    <TextView
        android:id="@+id/tvAccDetailsTailor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:elevation="5dp"
        android:text="@string/acc_details"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:drawableLeftCompat="@drawable/ic_person"
        android:background="@drawable/text_view_ripple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBarMore2" />

    <TextView
        android:id="@+id/tvLocationTailor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:elevation="5dp"
        android:text="@string/update_location"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:drawableLeftCompat="@drawable/ic_location"
        android:background="@drawable/text_view_ripple"
        app:layout_constraintEnd_toEndOf="@+id/tvAccDetailsTailor"
        app:layout_constraintStart_toStartOf="@+id/tvAccDetailsTailor"
        app:layout_constraintTop_toBottomOf="@+id/tvAccDetailsTailor" />

    <TextView
        android:id="@+id/tvLogoutTailor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:drawablePadding="8dp"
        android:elevation="5dp"
        android:padding="8dp"
        android:text="@string/logout"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:drawableLeftCompat="@drawable/ic_logout"
        android:background="@drawable/text_view_ripple"
        app:layout_constraintEnd_toEndOf="@+id/tvLocationTailor"
        app:layout_constraintStart_toStartOf="@+id/tvLocationTailor"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationTailor" />

</androidx.constraintlayout.widget.ConstraintLayout>